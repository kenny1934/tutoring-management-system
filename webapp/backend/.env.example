# Database Configuration
# Get these from your Google Cloud SQL instance
INSTANCE_CONNECTION_NAME=your-project:region:instance-name
DB_HOST=your.cloud.sql.public.ip
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=csm_db

# Google OAuth Configuration
# Create OAuth 2.0 credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# JWT Configuration
# Generate a secure random string for production (e.g., openssl rand -hex 32)
JWT_SECRET_KEY=dev-secret-key-change-in-production

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Application Configuration
ENVIRONMENT=development

# CORS Configuration
# Comma-separated list of allowed origins for Cross-Origin Resource Sharing
# Development defaults: localhost:3000 (Next.js default), localhost:3001 (alternative port)
# Also includes 127.0.0.1 variants for compatibility
# Production: Must set specific origins (e.g., https://yourdomain.com)
# Never use wildcards (*) in production!
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001

# Google Calendar Configuration
# For test/exam tracking from Google Calendar
GOOGLE_CALENDAR_ID=msamacau01@gmail.com
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
CALENDAR_SYNC_TTL_MINUTES=15

# Optional: For production deployment
# CLOUD_SQL_CONNECTION_NAME will be used automatically on Cloud Run
